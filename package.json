{
  "name": "scrolt-backend",
  "version": "1.0.0",
  "description": "Backend API for Scrolt - English learning vocabulary cards",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon --exec ts-node --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "ts-node src/scripts/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "ts-node src/scripts/seed.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "english",
    "learning",
    "vocabulary",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@upstash/redis": "^1.36.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "pg": "^8.16.3",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.11.3",
    "drizzle-kit": "^0.31.8",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
